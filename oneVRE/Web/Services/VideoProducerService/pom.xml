<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd" xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<parent>
        <artifactId>Services</artifactId>
        <groupId>com.googlecode.onevre</groupId>
        <version>0.1-SNAPSHOT</version>
    </parent>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>VideoProducerService</artifactId>
	<packaging>jar</packaging>
	<name>VideoProducerService</name>
     <build>
        <finalName>VideoProducerService</finalName>
	 	<plugins>
			<plugin>
		        <artifactId>maven-assembly-plugin</artifactId>
		        <version>2.2-beta-5</version>
				<configuration>
					<appendAssemblyId>false</appendAssemblyId>
					<finalName>resources</finalName>
					<outputDirectory>src/main/resources</outputDirectory>
					<descriptors>
						<descriptor>src/main/assembly/VideoProducerService.xml</descriptor>
		            </descriptors>
				</configuration>
				<executions>
				<execution>
				<phase>generate-resources</phase>
				<id>createResources</id>
				<goals>
				<goal>single</goal>
				</goals>
				</execution>
				</executions>
			</plugin>
		</plugins>
    </build>

</project>